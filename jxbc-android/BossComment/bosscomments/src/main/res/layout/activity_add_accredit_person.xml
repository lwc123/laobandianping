<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_background"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        layout="@layout/include_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        layout="@layout/include_input_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/line_color"/>

    <RelativeLayout
        android:id="@+id/activity_change_accredit_role"
        android:layout_width="match_parent"
        android:layout_height="@dimen/excel_height_90px"
        android:background="@color/white">

        <com.juxian.bosscomments.widget.TextView
            android:id="@+id/input_for_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_22PX"
            android:text="@string/change_person_data_role"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/DIMEN_30PX"/>

        <RadioGroup
            android:id="@+id/add_accredit_person_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_toRightOf="@+id/input_for_text"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/add_accredit_person_rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_52PX"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/check_record_status_selector"
                android:text="管理员"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX"
                android:visibility="visible"/>

            <RadioButton
                android:id="@+id/add_accredit_person_rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_52PX"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/check_record_status_selector"
                android:text="高管"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX"/>

            <RadioButton
                android:id="@+id/add_accredit_person_rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/check_record_status_selector"
                android:text="建档员"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX"/>
        </RadioGroup>
    </RelativeLayout>

    <include
        layout="@layout/include_button_text34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_90PX"
        android:layout_marginRight="@dimen/DIMEN_90PX"
        android:layout_marginTop="@dimen/DIMEN_50PX"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:paddingLeft="@dimen/DIMEN_22PX"
        android:paddingRight="@dimen/DIMEN_22PX"
        android:textColor="@color/menu_color"
        android:textSize="@dimen/DIMEN_22PX"
        android:gravity="center"
        android:text="确认授权后，该用户可以登录老板点评，进行点评，请谨慎操作"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/role_power_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:gravity="bottom"
            android:text="@string/role_power_explain"
            android:textColor="@color/accredit_manage_bt_color"/>
    </RelativeLayout>
</LinearLayout>