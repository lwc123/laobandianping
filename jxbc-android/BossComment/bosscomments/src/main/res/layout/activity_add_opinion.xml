<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/head"
        layout="@layout/include_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DIMEN_38PX"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX"
                tools:text="维达纸巾公司"/>
            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/MyRatingBarThree"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DIMEN_60PX"
                android:layout_height="@dimen/DIMEN_36PX"
                android:layout_alignParentRight="true"
                android:numStars="5" />

            <include
                layout="@layout/include_opinion_start_lable"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_marginTop="@dimen/DIMEN_48PX"
                android:textSize="@dimen/DIMEN_28PX"
                android:text="请选择标签"/>

            <com.juxian.bosscomments.widget.TagFlowLayout
                android:id="@+id/tag_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_8PX"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_marginRight="@dimen/DIMEN_20PX"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                app:max_select="-1">

            </com.juxian.bosscomments.widget.TagFlowLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/DIMEN_24PX"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/DIMEN_20PX"
                android:textColor="@color/accredit_manage_bt_color"
                android:text="更多标签"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_22PX"
                android:padding="@dimen/DIMEN_20PX">
                <com.juxian.bosscomments.widget.EditText
                    android:id="@+id/feedback_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_opinion_edit"
                    android:gravity="top"
                    android:minHeight="@dimen/DIMEN_300PX"
                    android:paddingBottom="@dimen/DIMEN_22PX"
                    android:paddingLeft="@dimen/DIMEN_30PX"
                    android:paddingRight="@dimen/DIMEN_22PX"
                    android:paddingTop="@dimen/DIMEN_22PX"
                    android:text=""
                    android:textColor="@color/menu_color"
                    android:textColorHint="@color/menu_color"
                    android:textSize="@dimen/DIMEN_24PX"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/feedback_content"
                    android:layout_alignRight="@+id/feedback_content"
                    android:layout_marginBottom="@dimen/DIMEN_20PX"
                    android:layout_marginRight="@dimen/DIMEN_20PX">

                    <com.juxian.bosscomments.widget.TextView
                        android:id="@+id/total_content_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/menu_color"
                        android:textSize="@dimen/DIMEN_24PX"/>

                    <com.juxian.bosscomments.widget.TextView
                        android:id="@+id/total_content_number_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/total_content_number"
                        tools:text="/1000"
                        android:textColor="@color/main_text_color"
                        android:textSize="@dimen/DIMEN_24PX"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:layout_marginRight="@dimen/DIMEN_20PX"
                android:background="@drawable/add_opinion_edit">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/DIMEN_90PX"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/DIMEN_16PX"
                    android:textSize="@dimen/DIMEN_30PX"
                    android:textColor="@color/main_text_color"
                    android:text="在职时间"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/DIMEN_90PX"
                    android:layout_toLeftOf="@+id/jiantou"
                    android:layout_marginRight="@dimen/DIMEN_20PX"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/DIMEN_30PX"
                    android:textColor="@color/menu_color"
                    android:text="请选择"/>
                <ImageView
                    android:id="@+id/jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/DIMEN_20PX"
                    android:src="@drawable/xiangyou" />
            </RelativeLayout>
            <include
                layout="@layout/include_button_text34_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_80PX"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:layout_marginTop="@dimen/DIMEN_53PX" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>