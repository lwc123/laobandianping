<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/company_register_bg"
    android:fitsSystemWindows="true">

    <include
        android:id="@+id/head"
        layout="@layout/include_head_title_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headcolor" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_88PX"
                    android:layout_marginLeft="@dimen/DIMEN_90PX"
                    android:layout_marginRight="@dimen/DIMEN_90PX"
                    android:layout_marginTop="@dimen/DIMEN_32PX"
                    android:background="@drawable/edit_bt_transparency"
                    android:paddingLeft="@dimen/DIMEN_24PX">

                    <ImageView
                        android:id="@+id/your_phone_image"
                        android:layout_width="@dimen/DIMEN_34PX"
                        android:layout_height="@dimen/DIMEN_34PX"
                        android:layout_centerVertical="true"
                        android:src="@drawable/sign_in_account" />

                    <com.juxian.bosscomments.widget.EditText
                        android:id="@+id/input_your_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/your_phone_image"
                        android:background="@null"
                        android:hint="@string/mobile_phone_is_empty"
                        android:inputType="phone"
                        android:paddingLeft="@dimen/DIMEN_32PX"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/menu_color"
                        android:textSize="@dimen/DIMEN_30PX" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_88PX"
                    android:layout_marginLeft="@dimen/DIMEN_90PX"
                    android:layout_marginRight="@dimen/DIMEN_90PX"
                    android:layout_marginTop="@dimen/DIMEN_32PX"
                    android:background="@drawable/edit_bt_transparency"
                    android:paddingLeft="@dimen/DIMEN_24PX">

                    <ImageView
                        android:id="@+id/yanzhengma"
                        android:layout_width="@dimen/DIMEN_34PX"
                        android:layout_height="@dimen/DIMEN_34PX"
                        android:layout_centerVertical="true"
                        android:src="@drawable/reset_pwd_code" />

                    <com.juxian.bosscomments.widget.EditText
                        android:id="@+id/input_validation_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/setting_password_timers"
                        android:layout_toRightOf="@+id/yanzhengma"
                        android:background="@null"
                        android:ems="10"
                        android:hint="@string/please_input_validation_code"
                        android:maxLength="6"
                        android:numeric="integer"
                        android:paddingLeft="@dimen/DIMEN_32PX"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/menu_color"
                        android:textSize="@dimen/DIMEN_30PX" />

                    <com.juxian.bosscomments.widget.TextView
                        android:id="@+id/setting_password_timers"
                        android:layout_width="@dimen/DIMEN_132PX"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/verification_code_bg"
                        android:gravity="center"
                        android:padding="@dimen/DIMEN_10PX"
                        android:text="@string/get_verification_code"
                        android:textColor="@color/luxury_gold_color"
                        android:textSize="@dimen/DIMEN_22PX" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_90PX"
                    android:layout_marginLeft="@dimen/DIMEN_90PX"
                    android:layout_marginRight="@dimen/DIMEN_90PX"
                    android:layout_marginTop="@dimen/DIMEN_32PX"
                    android:background="@drawable/edit_bt_transparency"
                    android:paddingLeft="@dimen/DIMEN_24PX">

                    <ImageView
                        android:id="@+id/mima"
                        android:layout_width="@dimen/DIMEN_34PX"
                        android:layout_height="@dimen/DIMEN_34PX"
                        android:layout_centerVertical="true"
                        android:src="@drawable/reset_pwd_pwd" />

                    <com.juxian.bosscomments.widget.EditText
                        android:id="@+id/setting_password_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_104PX"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/mima"
                        android:background="@null"
                        android:hint="@string/please_input_signin_password"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/DIMEN_32PX"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/menu_color"
                        android:textSize="@dimen/DIMEN_30PX" />
                </RelativeLayout>

                <com.juxian.bosscomments.widget.Button
                    android:id="@+id/include_button_button"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/DIMEN_88PX"
                    android:background="@drawable/login_bg"
                    android:layout_marginLeft="@dimen/DIMEN_90PX"
                    android:layout_marginRight="@dimen/DIMEN_90PX"
                    android:layout_marginTop="@dimen/DIMEN_50PX"
                    android:text="注册"
                    android:textColor="@color/luxury_gold_color"
                    android:textSize="@dimen/DIMEN_30PX" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/DIMEN_90PX"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/select_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/DIMEN_22PX"
                        android:paddingTop="@dimen/DIMEN_24PX">

                        <CheckBox
                            android:id="@+id/agreement_check"
                            android:layout_width="@dimen/DIMEN_26PX"
                            android:layout_height="@dimen/DIMEN_26PX"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/check_selector"
                            android:button="@null"
                            android:checked="true" />

                        <com.juxian.bosscomments.widget.TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/DIMEN_10PX"
                            android:text="@string/user_agree_read"
                            android:textColor="@color/menu_color"
                            android:textSize="@dimen/DIMEN_22PX" />
                    </LinearLayout>

                    <com.juxian.bosscomments.widget.TextView
                        android:id="@+id/agreement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/DIMEN_22PX"
                        android:paddingTop="@dimen/DIMEN_24PX"
                        android:text="@string/company_agreement"
                        android:singleLine="true"
                        android:textColor="@color/accredit_manage_bt_color"
                        android:textSize="@dimen/DIMEN_22PX" />
                    <com.juxian.bosscomments.widget.TextView
                        android:id="@+id/privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/DIMEN_22PX"
                        android:paddingTop="@dimen/DIMEN_24PX"
                        android:singleLine="true"
                        android:visibility="gone"
                        android:text="@string/company_user_privacy_agreement"
                        android:textColor="@color/accredit_manage_bt_color"
                        android:textSize="@dimen/DIMEN_22PX" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_400PX"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/DIMEN_50PX"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已有账号，"
                    android:textColor="@color/main_text_color"
                    android:textSize="@dimen/DIMEN_30PX" />

                <TextView
                    android:id="@+id/go_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/DIMEN_10PX"
                    android:paddingTop="@dimen/DIMEN_10PX"
                    android:text="@string/already_have_account"
                    android:textColor="@color/accredit_manage_bt_color"
                    android:textSize="@dimen/DIMEN_30PX" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>