<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/test_js_to_app_include"
        layout="@layout/include_head_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_96PX"
        android:layout_below="@+id/headcolor" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/test_js_to_app_include"
        android:layout_above="@+id/bottom_bt"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/bottom_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_88PX"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/edit_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/main_text_color"
            android:text="关闭职位"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_34PX"
            android:textColor="@color/white"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/change_position_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/luxury_gold_color"
            android:text="编辑职位"
            android:gravity="center"
            android:textSize="@dimen/DIMEN_34PX"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>