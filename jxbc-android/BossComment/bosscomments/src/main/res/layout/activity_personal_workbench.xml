<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_background"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        android:id="@+id/head_title"
        layout="@layout/include_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_20PX"
        android:background="@color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/main_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_188PX"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_archive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/personal_archive"
            android:gravity="center"
            android:paddingBottom="@dimen/DIMEN_34PX"
            android:paddingTop="@dimen/DIMEN_38PX"
            android:text="@string/personal_my_archive"
            android:textColor="@color/main_text_color"/>

        <View
            android:layout_width="@dimen/DIMEN_1PX"
            android:layout_height="match_parent"
            android:background="@color/main_line_color"/>

        <TextView
            android:id="@+id/apply_job"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/personal_apply_job"
            android:gravity="center"
            android:paddingBottom="@dimen/DIMEN_34PX"
            android:paddingTop="@dimen/DIMEN_38PX"
            android:text="@string/personal_apply_job"
            android:textColor="@color/main_text_color"/>

        <View
            android:layout_width="@dimen/DIMEN_1PX"
            android:layout_height="match_parent"
            android:background="@color/main_line_color"/>

        <TextView
            android:id="@+id/my_pocket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/personal_my_pocket"
            android:gravity="center"
            android:paddingBottom="@dimen/DIMEN_34PX"
            android:paddingTop="@dimen/DIMEN_38PX"
            android:text="@string/personal_my_pocket"
            android:textColor="@color/main_text_color"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/main_line_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_188PX"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/invite_register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:drawableTop="@drawable/invite_register"
                    android:gravity="center"
                    android:paddingBottom="@dimen/DIMEN_34PX"
                    android:paddingTop="@dimen/DIMEN_38PX"
                    android:text="@string/personal_invite_register"
                    android:textColor="@color/main_text_color"/>

                <ImageView
                    android:id="@+id/invite_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_40PX"
                    android:src="@drawable/invite_prize"/>
            </RelativeLayout>

            <View
                android:layout_width="@dimen/DIMEN_1PX"
                android:layout_height="match_parent"
                android:background="@color/main_line_color"/>

            <TextView
                android:id="@+id/personal_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@drawable/main_message"
                android:gravity="center"
                android:paddingBottom="@dimen/DIMEN_34PX"
                android:paddingTop="@dimen/DIMEN_38PX"
                android:text="@string/main_message"
                android:textColor="@color/main_text_color"/>

            <View
                android:layout_width="@dimen/DIMEN_1PX"
                android:layout_height="match_parent"
                android:background="@color/main_line_color"/>

            <TextView
                android:id="@+id/personal_setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@drawable/personal_setting"
                android:gravity="center"
                android:paddingBottom="@dimen/DIMEN_34PX"
                android:paddingTop="@dimen/DIMEN_38PX"
                android:text="@string/system_setting"
                android:textColor="@color/main_text_color"/>
        </LinearLayout>

        <TextView
            android:id="@+id/unread_msg_number"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/shape_oval_red"
            android:gravity="center"
            android:text="99+"
            android:textColor="@color/juxian_red"
            android:textSize="@dimen/DIMEN_20PX"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/main_line_color"/>

</LinearLayout>

