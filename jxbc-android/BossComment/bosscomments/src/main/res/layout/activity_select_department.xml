<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jxl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/main_background"
    android:orientation="vertical">

    <include
        android:id="@+id/head"
        layout="@layout/include_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.juxian.bosscomments.widget.EditText
        android:id="@+id/input_department_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:hint="@string/input_department_name"
        android:background="@drawable/edit_border_gray"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/menu_color"
        android:paddingLeft="@dimen/DIMEN_15PX"
        android:paddingRight="@dimen/DIMEN_15PX"
        android:layout_marginTop="@dimen/DIMEN_30PX"
        android:textSize="@dimen/DIMEN_30PX"
        android:layout_marginLeft="@dimen/DIMEN_50PX"
        android:layout_marginRight="@dimen/DIMEN_50PX"/>

    <include
        layout="@layout/include_button_text34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_90PX"
        android:layout_marginRight="@dimen/DIMEN_90PX"
        android:layout_marginTop="@dimen/DIMEN_50PX" />

    <com.juxian.bosscomments.widget.TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_78PX"
        android:gravity="center_vertical"
        android:textSize="@dimen/DIMEN_34PX"
        android:textColor="@color/main_text_color"
        android:layout_marginLeft="@dimen/DIMEN_36PX"
        android:text="@string/select_already_build_department"/>

    <com.juxian.bosscomments.widget.TagFlowLayout
        android:id="@+id/id_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_22PX"
        android:layout_marginRight="@dimen/DIMEN_22PX"
        jxl:max_select="1">

    </com.juxian.bosscomments.widget.TagFlowLayout>
</LinearLayout>