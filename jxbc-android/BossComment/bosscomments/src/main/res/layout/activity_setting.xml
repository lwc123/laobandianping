<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/main_background">

    <!--<include-->
        <!--layout="@layout/include_head_status_bar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

    <include
        android:id="@+id/head_title"
        layout="@layout/include_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_title"
        android:visibility="gone"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/change_identity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/excel_height_90px"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:background="@color/white">

            <com.juxian.bosscomments.widget.TextView
                android:id="@+id/change_identity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_22PX"
                android:text="@string/change_identity"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_16PX"
                android:src="@drawable/xiangyou" />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/line_color"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/re_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/excel_height_90px"
            android:background="@color/white">

            <com.juxian.bosscomments.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_22PX"
                android:text="@string/clean_cache"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX" />

            <com.juxian.bosscomments.widget.TextView
                android:id="@+id/cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_22PX"
                android:layout_marginRight="@dimen/DIMEN_62PX"
                android:text="2.99M"
                android:textSize="@dimen/DIMEN_24PX" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_16PX"
                android:src="@drawable/xiangyou" />
        </RelativeLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/department_problems"
            android:layout_width="match_parent"
            android:layout_height="@dimen/excel_height_90px"
            android:background="@color/white">

            <com.juxian.bosscomments.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_22PX"
                android:text="@string/department_problems"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_16PX"
                android:src="@drawable/xiangyou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/line_color"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/suggestion_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/excel_height_90px"
            android:background="@color/white">

            <com.juxian.bosscomments.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_22PX"
                android:text="@string/suggestion_feedback_text"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_16PX"
                android:src="@drawable/xiangyou" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/department_about_us"
            android:layout_width="match_parent"
            android:layout_height="@dimen/excel_height_90px"
            android:background="@color/white">

            <com.juxian.bosscomments.widget.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/DIMEN_22PX"
                android:text="@string/department_about_us"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/DIMEN_16PX"
                android:src="@drawable/xiangyou" />
        </RelativeLayout>

        <include
            layout="@layout/include_button_text34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_90PX"
            android:layout_marginRight="@dimen/DIMEN_90PX"
            android:layout_marginTop="@dimen/DIMEN_50PX" />

    </LinearLayout>
    <TextView
        android:id="@+id/updateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:text=""
        android:textColor="@color/menu_color" />

    <RelativeLayout
        android:id="@+id/advanced_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/excel_height_90px"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:layout_below="@+id/head_title"
        android:visibility="gone"
        android:background="@color/white">

        <com.juxian.bosscomments.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_22PX"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/DIMEN_30PX"
            android:text="不允许任何人对公司进行点评和评论"/>

        <CheckBox
            android:id="@+id/if_receive_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:background="@drawable/open_selected"
            android:button="@null"
            android:text="@null" />
    </RelativeLayout>
</RelativeLayout>