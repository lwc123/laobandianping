<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_background"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include
        layout="@layout/include_head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:text="亲爱的用户:"
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_30PX"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_30PX"
                android:gravity="center|left"
                android:text="@string/feed_text"

                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_24PX"/>

            <include
                layout="@layout/include_statistics_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_20PX"/>

            <include
                layout="@layout/include_button_text34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginRight="@dimen/DIMEN_90PX"
                android:layout_marginTop="@dimen/DIMEN_50PX"/>

            <TextView
                android:id="@+id/submit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_90PX"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:text="每天可提交三次"
                android:textColor="@color/menu_color"
                android:textSize="@dimen/DIMEN_24PX"/>

            <TextView
                android:id="@+id/hot_phone_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DIMEN_36PX"/>

            <TextView
                android:id="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DIMEN_300PX"
                android:gravity="center"
                android:layout_marginBottom="@dimen/DIMEN_100PX"
                android:paddingBottom="@dimen/DIMEN_5PX"
                android:paddingTop="@dimen/DIMEN_5PX"
                android:text="@string/if_need_help"
                android:textColor="@color/accredit_manage_bt_color"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>