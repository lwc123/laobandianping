<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:background="@color/main_color">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:padding="@dimen/DIMEN_8PX"
            android:text="取消"
            android:textColor="@color/first_page_buy_num_color"
            android:textSize="@dimen/DIMEN_24PX" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请选择日期"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_34PX" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:padding="@dimen/DIMEN_8PX"
            android:text="确定"
            android:textColor="@color/luxury_gold_color"
            android:textSize="@dimen/DIMEN_24PX" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.pl.wheelview.WheelView
            android:id="@+id/min_salary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            app:itemNumber="5"
            app:lineColor="@color/main_color"
            app:lineHeight="@dimen/DIMEN_1PX"
            app:noEmpty="true"
            app:normalTextColor="#ff000000"
            app:normalTextSize="22sp"
            app:selectedTextColor="#ff000000"
            app:selectedTextSize="22sp"
            app:unitHeight="40dp" />
        <com.pl.wheelview.WheelView
            android:id="@+id/max_salary"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            app:itemNumber="5"
            app:lineColor="@color/main_color"
            app:lineHeight="@dimen/DIMEN_1PX"
            app:noEmpty="true"
            app:normalTextColor="#ff000000"
            app:normalTextSize="22sp"
            app:selectedTextColor="#ff000000"
            app:selectedTextSize="22sp"
            app:unitHeight="40dp" />
    </LinearLayout>
</LinearLayout>