<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:banner="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_310PX"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_310PX"
        banner:indicator_margin="@dimen/DIMEN_10PX"
        banner:indicator_height="@dimen/DIMEN_16PX"
        banner:indicator_width="@dimen/DIMEN_16PX"
        banner:indicator_drawable_selected="@drawable/banner_selected"
        banner:indicator_drawable_unselected="@drawable/banner_unselected"/>
</LinearLayout>