<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_220PX"
        android:gravity="center"
        android:orientation="vertical">
        <com.juxian.bosscomments.widget.TextView
            android:id="@+id/dialog_tips_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_20PX"
            android:gravity="center"
            android:text="操作成功！"
            android:textColor="#000000"
            android:textSize="@dimen/DIMEN_32PX" />

        <com.juxian.bosscomments.widget.TextView
            android:id="@+id/dialog_tips_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/DIMEN_20PX"
            android:paddingRight="@dimen/DIMEN_20PX"
            android:gravity="center"
            android:text="审核通过后，阶段评价将生效"
            android:textColor="#000000"
            android:textSize="@dimen/DIMEN_24PX" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.juxian.bosscomments.widget.TextView
            android:id="@+id/dialog_tips_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_90PX"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/close_dialog"
            android:textColor="#000000"
            android:textSize="@dimen/DIMEN_32PX" />

        <View
            android:id="@+id/line"
            android:layout_width="@dimen/DIMEN_1PX"
            android:layout_height="@dimen/DIMEN_90PX"
            android:background="@color/line_color" />

        <com.juxian.bosscomments.widget.TextView
            android:id="@+id/dialog_tips_ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_90PX"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="#000000"
            android:textSize="@dimen/DIMEN_32PX" />
    </LinearLayout>
</LinearLayout>
