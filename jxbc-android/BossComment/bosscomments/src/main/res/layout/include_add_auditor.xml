<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/auditor_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_90PX"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/DIMEN_22PX"
        android:background="@color/white"
        android:text="@string/add_comment_auditor"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/DIMEN_30PX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <com.juxian.bosscomments.widget.ResultListView
            android:id="@+id/all_auditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/line_color"
            android:dividerHeight="@dimen/DIMEN_1PX"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1PX"
            android:background="@color/line_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_90PX"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/add_comment_auditor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_22PX"
                android:src="@drawable/gray_add" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>