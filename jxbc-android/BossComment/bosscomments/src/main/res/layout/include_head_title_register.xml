<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <!-- android:background="#c63a39" -->

    <RelativeLayout
        android:id="@+id/include_head_title_big_re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_96PX"
        android:background="#49525d">

        <LinearLayout
            android:id="@+id/include_head_title_lin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- android:layout_marginBottom="16dp" android:layout_marginBottom="16dp" -->

            <View
                android:layout_width="@dimen/DIMEN_32PX"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/include_head_title_back"
                    android:layout_width="@dimen/DIMEN_38PX"
                    android:layout_height="@dimen/DIMEN_40PX"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/nav_icon_back1"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <com.juxian.bosscomments.widget.TextView
            android:id="@+id/include_head_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_34PX"/>

        <CheckBox
            android:id="@+id/include_head_title_collect"
            android:layout_width="@dimen/DIMEN_40PX"
            android:layout_height="@dimen/DIMEN_36PX"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_118PX"
            android:background="@drawable/collect_selector"
            android:button="@null"
            android:visibility="invisible"/>

        <RelativeLayout
            android:id="@+id/include_head_title_register_re"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DIMEN_32PX">

            <com.juxian.bosscomments.widget.TextView
                android:id="@+id/include_head_title_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:text="@string/register"
                android:textColor="#ffffff"
                android:textSize="@dimen/DIMEN_27PX"
                android:visibility="invisible"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/include_head_title_re"
            android:layout_width="@dimen/DIMEN_118PX"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/include_head_title_tab"
                android:layout_width="@dimen/DIMEN_72PX"
                android:layout_height="@dimen/DIMEN_72PX"
                android:layout_centerInParent="true"
                android:padding="@dimen/DIMEN_18PX"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/include_head_title_tab1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_50PX"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:visibility="invisible"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/include_head_title_re1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/DIMEN_20PX"
            android:paddingRight="@dimen/DIMEN_20PX"
            android:visibility="visible">

            <TextView
                android:id="@+id/include_head_title_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/juxian_red"
                android:textSize="@dimen/DIMEN_24PX"
                android:visibility="invisible"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/exist_demonstration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:paddingRight="@dimen/DIMEN_20PX"
            android:paddingLeft="@dimen/DIMEN_20PX"
            android:background="@drawable/btn_red"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:paddingTop="@dimen/DIMEN_10PX"
            android:paddingBottom="@dimen/DIMEN_10PX"
            android:visibility="gone"
            android:textSize="@dimen/DIMEN_24PX"
            android:text="退出演示"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>