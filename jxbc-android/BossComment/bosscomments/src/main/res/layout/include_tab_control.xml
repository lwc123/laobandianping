<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_type"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_80PX"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/re_cc_service"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.juxian.bosscomments.widget.TextView
            android:id="@+id/my_collect_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="待处理事项"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/DIMEN_30PX" />

        <View
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_6PX"
            android:layout_alignParentBottom="true"
            android:background="@color/juxian_red" />

        <ImageView
            android:id="@+id/msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/my_collect_service"
            android:layout_toEndOf="@+id/my_collect_service"
            android:layout_toRightOf="@+id/my_collect_service"
            android:paddingLeft="@dimen/DIMEN_6PX"
            android:src="@drawable/msg"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_work_height"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.juxian.bosscomments.widget.TextView
            android:id="@+id/my_collect_work_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/DIMEN_156PX"
            android:gravity="center"
            android:text="通知"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/DIMEN_30PX" />

        <View
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_6PX"
            android:layout_alignParentBottom="true"
            android:background="@color/juxian_red" />

        <ImageView
            android:id="@+id/msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_collect_work_height"
            android:layout_alignStart="@+id/my_collect_work_height"
            android:layout_alignTop="@+id/my_collect_work_height"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:src="@drawable/msg"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>