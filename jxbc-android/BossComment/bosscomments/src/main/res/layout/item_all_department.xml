<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/DIMEN_22PX"
    android:paddingRight="@dimen/DIMEN_12PX"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_all_department_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_90PX"
        android:gravity="center_vertical"
        android:text=""
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/operation_bt"
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/DIMEN_30PX" />

    <LinearLayout
        android:id="@+id/operation_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_all_department_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIMEN_20PX"
            android:text="修改"
            android:textColor="@color/juxian_red"
            android:textSize="@dimen/DIMEN_22PX" />

        <TextView
            android:id="@+id/item_all_department_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIMEN_20PX"
            android:text="删除"
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/DIMEN_22PX" />
    </LinearLayout>

</RelativeLayout>