<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/comment_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/boss_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:layout_marginBottom="@dimen/DIMEN_5PX"
            android:text=""
            android:textColor="@color/luxury_gold_color"
            android:textSize="@dimen/DIMEN_24PX"/>

        <TextView
            android:id="@+id/boss_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_5PX"
            android:layout_marginTop="@dimen/DIMEN_5PX"
            android:layout_toRightOf="@+id/boss_name"
            android:text=""
            android:textSize="@dimen/DIMEN_24PX"/>

    </LinearLayout>
</RelativeLayout>