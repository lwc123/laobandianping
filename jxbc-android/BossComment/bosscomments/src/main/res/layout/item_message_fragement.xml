<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/main_background"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/DIMEN_20PX">

        <ImageView
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:id="@+id/imageView_logo"
            android:layout_width="@dimen/DIMEN_100PX"
            android:layout_height="@dimen/DIMEN_100PX"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/DIMEN_10PX"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_10PX"
            android:layout_toRightOf="@+id/imageView_logo"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView

                android:id="@+id/mess_frag_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/DIMEN_60PX"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_28PX"/>

            <TextView
                android:id="@+id/mess_frag_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_20PX"
                android:gravity="center|left"
                android:text=""
                android:textColor="@color/menu_color"
                android:textSize="@dimen/DIMEN_24PX"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/goToCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:padding="@dimen/DIMEN_4PX"
            android:src="@drawable/xiangyou"/>

    </RelativeLayout>
</LinearLayout>