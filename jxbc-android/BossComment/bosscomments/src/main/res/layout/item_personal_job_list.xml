<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:paddingLeft="@dimen/DIMEN_22PX"
        android:paddingRight="@dimen/DIMEN_22PX">

        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/luxury_gold_color"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:id="@+id/salary_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/juxian_red"
            android:textSize="@dimen/DIMEN_30PX" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/DIMEN_22PX"
        android:layout_marginTop="@dimen/DIMEN_20PX">
        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_24PX"
            android:textColor="@color/main_text_color"
            android:text=""/>
        <TextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DIMEN_22PX"
            android:layout_marginLeft="@dimen/DIMEN_22PX"
            android:layout_toRightOf="@+id/company_name"
            android:layout_centerVertical="true"
            android:textColor="@color/menu_color"
            android:text=""/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:paddingLeft="@dimen/DIMEN_22PX"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/work_experience"/>
        <TextView
            android:id="@+id/require_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_6PX"
            android:textColor="@color/menu_color"
            android:textSize="@dimen/DIMEN_24PX"
            android:text=""/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_22PX"
            android:src="@drawable/job_degree"/>
        <TextView
            android:id="@+id/require_educational"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_color"
            android:layout_marginLeft="@dimen/DIMEN_6PX"
            android:textSize="@dimen/DIMEN_24PX"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/DIMEN_22PX"
        android:layout_marginBottom="@dimen/DIMEN_20PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/work_address"/>
        <TextView
            android:id="@+id/company_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_color"
            android:layout_marginLeft="@dimen/DIMEN_6PX"
            android:textSize="@dimen/DIMEN_24PX"
            android:text=""/>
    </LinearLayout>
</LinearLayout>