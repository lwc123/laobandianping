<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_22PX"
        android:layout_marginTop="@dimen/DIMEN_20PX">

        <TextView
            android:id="@+id/personal_job_search_position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/luxury_gold_color"
            android:textSize="@dimen/DIMEN_30PX"/>

        <TextView
            android:id="@+id/personal_job_search_position_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DIMEN_22PX"
            android:text=""
            android:textColor="@color/juxian_red"
            android:textSize="@dimen/DIMEN_30PX"/>

        <LinearLayout
            android:id="@+id/personal_job_search_position_name_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_job_search_position_salary"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/personal_job_search_position_cp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_24PX"/>

            <TextView
                android:id="@+id/personal_job_search_position_submit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:text=""
                android:textColor="@color/menu_color"
                android:textSize="@dimen/DIMEN_24PX"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/personal_job_search_position_experience_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_job_search_position_name_time"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/post_exper"/>

            <TextView
                android:id="@+id/personal_job_search_position_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_8PX"
                android:text=""
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_22PX"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_20PX"
                android:src="@drawable/post_edu"/>

            <TextView
                android:id="@+id/personal_job_search_position_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/DIMEN_8PX"
                android:text=""
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_22PX"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_job_search_position_experience_education"
            android:layout_marginBottom="@dimen/DIMEN_20PX"
            android:layout_marginTop="@dimen/DIMEN_20PX"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/post_loca"/>

            <TextView
                android:id="@+id/personal_job_search_position_workaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_8PX"
                android:text=""
                android:textColor="@color/main_text_color"
                android:textSize="@dimen/DIMEN_22PX"/>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>