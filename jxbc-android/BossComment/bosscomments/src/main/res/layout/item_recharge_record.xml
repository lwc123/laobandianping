<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/DIMEN_20PX"
    android:paddingLeft="@dimen/DIMEN_24PX"
    android:paddingRight="@dimen/DIMEN_24PX"
    android:paddingTop="@dimen/DIMEN_20PX">

    <RelativeLayout
        android:id="@+id/type_and_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/trade_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:id="@+id/recharge_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:text=""
            android:textColor="@color/main_text_color"
            android:textSize="@dimen/DIMEN_24PX" />
    </RelativeLayout>

    <TextView
        android:id="@+id/recharge_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/DIMEN_18PX"
        android:text=""
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/DIMEN_24PX" />

    <TextView
        android:id="@+id/pay_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_18PX"
        android:text=""
        android:textColor="@color/main_text_color"
        android:textSize="@dimen/DIMEN_24PX" />
</LinearLayout>