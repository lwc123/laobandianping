<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pic_customslist_imgs"
        android:layout_width="@dimen/DIMEN_140PX"
        android:layout_height="@dimen/DIMEN_140PX"
        android:layout_marginBottom="@dimen/DIMEN_20PX"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:layout_marginTop="@dimen/DIMEN_20PX"
        android:scaleType="fitXY"
        android:src="@drawable/tupian" />

    <TextView
        android:id="@+id/pic_customslist_imgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/DIMEN_12PX" />

    <TextView
        android:id="@+id/pic_customslist_imgcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/DIMEN_12PX" />

</LinearLayout>