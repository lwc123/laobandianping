<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_308PX"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/custom_board_weixin_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/DIMEN_88PX"
                android:layout_height="@dimen/DIMEN_88PX"
                android:src="@drawable/share_weixin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_14PX"
                android:gravity="center_horizontal"
                android:text="@string/send_to_weixin_friend"
                android:textSize="@dimen/DIMEN_24PX" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/DIMEN_1PX"
            android:layout_height="@dimen/DIMEN_194PX"
            android:layout_gravity="center_vertical"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/custom_board_pengyouquan_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/DIMEN_88PX"
                android:layout_height="@dimen/DIMEN_88PX"
                android:src="@drawable/share_pengyouquan" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_14PX"
                android:gravity="center_horizontal"
                android:text="@string/share_to_weixin_group"
                android:textSize="@dimen/DIMEN_24PX" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_20PX"
        android:background="@color/main_share_background" />

    <TextView
        android:id="@+id/details_job_center_cancel_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/excel_height_90px"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#000000"
        android:textSize="@dimen/DIMEN_34PX" />
</LinearLayout>